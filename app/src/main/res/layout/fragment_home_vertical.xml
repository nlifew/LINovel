<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="15dp">

    <TextView
        android:id="@+id/fragment_home_vertical_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        tools:text="免费新书" />

    <TextView
        android:id="@+id/fragment_home_vertical_arrow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/fragment_home_vertical_title"
        android:layout_alignBottom="@id/fragment_home_vertical_title"
        android:layout_toEndOf="@id/fragment_home_vertical_title"
        android:textSize="14sp"
        android:gravity="end|center_vertical"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/fragment_home_vertical_arrow"
        android:divider="@drawable/divider_horizontal"
        android:showDividers="middle"
        android:layout_marginTop="5dp" >

        <include
            android:id="@+id/fragment_home_vertical_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            layout="@layout/fragment_home_vertical_item" />
        <include
            android:id="@+id/fragment_home_vertical_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            layout="@layout/fragment_home_vertical_item" />

        <include
            android:id="@+id/fragment_home_vertical_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            layout="@layout/fragment_home_vertical_item" />
    </LinearLayout>
</RelativeLayout>